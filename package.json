{
  "name": "next-firebase-functions",
  "version": "1.0.0",
  "description": "next server running on Cloud Functions for Firebase",
  "repository": "https://github.com/sarovin/next-firebase-functions.git",
  "author": "Saro Vindigni",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-es2015": "^6.24.1",
    "cp-cli": "^1.0.2",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "prepackage-functions": "rimraf functions",
    "package-functions": "babel 'functionsES6' --out-dir 'functions' --presets=es2015 --copy-files --ignore 'node_modules, pages'",
    "postpackage-functions": "cd functions && yarn",
    "prenext-build": "cp-cli src/ functions/",
    "next-build": "cd functions && yarn run build",
    "firebase:deploy": "cd functions && firebase deploy",
    "deploy": "yarn run package-functions && yarn run next-build && yarn firebase:deploy"
  }
}
