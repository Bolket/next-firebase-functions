{
  "name": "next-firebase-functions",
  "version": "1.0.0",
  "description": "NextJS with firebase cloud functions",
  "repository": "https://github.com/sarovin/next-firebase-functions.git",
  "author": "Saro Vindigni",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-preset-es2015": "^6.24.1",
    "cp-cli": "^1.0.2",
    "eslint": "^3.19.0",
    "eslint-config-airbnb": "^15.0.2",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-react": "^7.1.0",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "prepackage-functions": "rimraf 'src/functions'",
    "package-functions": "babel 'functionsES6' --out-dir 'src/functions' --presets=es2015 --copy-files --ignore 'node_modules'",
    "next": "yarn build-firebase && cd 'src/app' && yarn && yarn dev",
    "preserve": "yarn build-all",
    "serve": "firebase serve --port 3000 --only functions,hosting",
    "build-next": "cd 'src/app' && yarn && yarn build",
    "build-firebase": "cd 'src/functions' && yarn",
    "build-all": "yarn package-functions && yarn build-next && yarn build-firebase",
    "predeploy": "yarn build-all",
    "deploy": "cd 'src/functions' && firebase deploy"
  }
}
