{
  "name": "next-firebase-functions",
  "version": "1.0.3",
  "description": "NextJS with firebase cloud functions",
  "repository": "https://github.com/bolket/next-firebase-functions.git",
  "author": "Bolket srls",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.38",
    "@babel/core": "7.0.0-beta.38",
    "@babel/preset-env": "^7.0.0-beta.38",
    "babel-eslint": "^8.2.1",
    "babel-plugin-transform-async-to-generator": "^6.24.1",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.23.0",
    "eslint": "^4.9.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-config-standard": "^11.0.0-beta.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-node": "^6.0.0",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-promise": "^3.6.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-standard": "^3.0.1",
    "prettier": "^1.10.2",
    "rimraf": "^2.6.2"
  },
  "scripts": {
    "prepackage-functions": "rimraf 'build/functions'",
    "package-functions": "babel 'src/functions' --out-dir 'build/functions' --copy-files --ignore 'node_modules'",
    "prenext": "yarn package-functions && cd 'build/functions' && yarn",
    "next": "cd 'src/app' && yarn && yarn dev",
    "serve": "cd 'build/functions' && firebase serve --port 5000 --only hosting,functions",
    "build-next": "cd 'src/app' && yarn && yarn build",
    "build-all": "yarn package-functions && yarn build-next",
    "predeploy": "yarn build-all",
    "deploy": "cd 'build/functions' && yarn && firebase deploy",
    "predeploy-functions": "yarn package-functions",
    "deploy-functions": "cd 'build/functions' && yarn && firebase deploy --only functions",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src"
  }
}
